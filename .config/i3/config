# vim:fileencoding=utf-8:ft=conf

set $mod Mod4
set $term alacritty
set $sys "[e]xit · [r]eload · [R]eboot · [p]oweroff"

set $ws1 "1:I"
set $ws2 "2:II"
set $ws3 "3:III"
set $ws4 "4:IV"
set $ws5 "5:V"
set $ws6 "6:VI"
set $ws7 "7:VII"
set $ws8 "8:VIII"
set $ws9 "9:IX"
set $ws10 "10:X"

set $bg-color            #13191C
set $inactive-bg-color   #13191C
set $text-color          #8EC07C
set $inactive-text-color #928374
set $urgent-bg-color     #900000
set $ind-color           #00ff00

set $default_gaps_inner 8
set $default_gaps_outer 3
set $mode_gaps gaps: (o)uter, (i)nner
#set $mode_gaps_outer outer gaps: +|-|0, Shift++|-|0 (global)
#set $mode_gaps_inner inner gaps: +|-|0, Shift++|-|0 (global)
gaps inner $default_gaps_inner
gaps outer $default_gaps_outer

font pango:Terminus 9

floating_modifier $mod

workspace_auto_back_and_forth yes
default_border pixel 2

bindsym $mod+Return exec $term -e /usr/bin/fish
bindsym $mod+q kill

#bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+d exec "rofi -show drun"
bindsym $mod+Pause exec i3lock --image=/home/$USER/img/bg/gits_city2.png
bindsym Print exec import -window root ~/img/$(date '+%F-%T').png
bindsym --release Shift+Print exec import ~/img/$(date '+%F-%T').png
#bindsym Shift+Print exec --no-startup-id gnome-screenshot -i

