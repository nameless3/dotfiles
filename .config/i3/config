# vim:fileencoding=utf-8:ft=conf

set {
    $mod Mod4
    $term termite

    $ws1 "1:I"
    $ws2 "2:II"
    $ws3 "3:III"
    $ws4 "4:IV"
    $ws5 "5:V"
    $ws6 "6:VI"
    $ws7 "7:VII"
    $ws8 "8:VIII"
    $ws9 "9:IX"
    $ws10 "10:X"

    $bg-color            #13191C
    $inactive-bg-color   #13191C
    $text-color          #8EC07C
    $inactive-text-color #928374
    $urgent-bg-color     #900000

    $default_gaps_inner 8
    $default_gaps_outer 3
    $mode_gaps gaps: (o)uter, (i)nner
    $mode_gaps_outer outer gaps: +|-|0, Shift++|-|0 (global)
    $mode_gaps_inner inner gaps: +|-|0, Shift++|-|0 (global)
}

font pango:xos4 Terminus 8

floating_modifier $mod normal

gaps inner $default_gaps_inner
gaps outer $default_gaps_outer

workspace_auto_back_and_forth yes
default_border pixel 1

bindsym {
    $mod+Return exec $term -e /usr/bin/zsh
    $mod+q kill

#   $mod+d exec --no-startup-id i3-dmenu-desktop
    $mod+d exec --no-startup-id "rofi -show drun -width 100 -location 1 -lines 6 -columns 10 -bw 2 -yoffset -2 -font 'xos4 Terminus 8' -theme /usr/share/rofi/themes/gruvbox-dark.rasi"
    $mod+Pause exec i3lock --image=/home/$USER/Pictures/bg/bladerunner2049-1.png
    Print exec --no-startup-id import -window root ~/Pictures/$(date '+%F-%T').png
    --release Shift+Print exec --no-startup-id import ~/Pictures/$(date '+%F-%T').png
#   Shift+Print exec --no-startup-id gnome-screenshot -i

    $mod+h focus left
    $mod+j focus down
    $mod+k focus up
    $mod+l focus right

    $mod+Shift+h move left
    $mod+Shift+j move down
    $mod+Shift+k move up
    $mod+Shift+l move right

    $mod+n workspace next
    $mod+p workspace prev

    $mod+f fullscreen toggle
    $mod+Shift+s sticky toggle
    $mod+z border toggle

    $mod+s layout stacking
    $mod+w layout tabbed
    $mod+e layout toggle split
    $mod+t split toggle

    $mod+Shift+space floating toggle
    $mod+Alt+space focus mode_toggle

    $mod+a focus parent
    $mod+Shift+a focus child

    $mod+Shift+minus move scratchpad
    $mod+minus scratchpad show

    $mod+Shift+c reload
    $mod+Shift+r restart
    $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"

#   $mod+b
#   $mod+Shift+b
    $mod+c exec $term -e cmus
#   $mod+Shift+d
#   $mod+Shift+f
    $mod+g exec --no-startup-id geany
#   $mod+i
#   $mod+Shift+i
#   $mod+m
#   $mod+Shift+m
#   $mod+Shift+n
    $mod+o gaps inner current set $default_gaps_inner; gaps outer current set $default_gaps_outer
    $mod+Shift+o gaps inner current set 0; gaps outer current set 0
#   $mod+Shift+p
#   $mod+Shift+t
    $mod+u exec --no-startup-id pavucontrol-qt
#   $mod+Shift+u
    $mod+v exec --no-startup-id tkpacman
#   $mod+Shift+v
#   $mod+x
#   $mod+Shift+x
    $mod+y exec $term -e pulsemixer
#   $mod+Shift+y
#   $mod+Shift+z

    XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
    XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
    XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
#   XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks
#   XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks
#   XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+10 i3blocks
    XF86AudioPlay exec --no-startup-id cmus-remote --pause
    XF86AudioPause exec --no-startup-id cmus-remote --pause
    XF86AudioStop exec --no-startup-id cmus-remote --stop
    XF86AudioNext exec --no-startup-id cmus-remote --next
    XF86AudioPrev exec --no-startup-id cmus-remote --prev

    $mod+1 workspace $ws1
    $mod+2 workspace $ws2
    $mod+3 workspace $ws3
    $mod+4 workspace $ws4
    $mod+5 workspace $ws5
    $mod+6 workspace $ws6
    $mod+7 workspace $ws7
    $mod+8 workspace $ws8
    $mod+9 workspace $ws9
    $mod+0 workspace $ws10

    $mod+Shift+1 move container to workspace $ws1
    $mod+Shift+2 move container to workspace $ws2
    $mod+Shift+3 move container to workspace $ws3
    $mod+Shift+4 move container to workspace $ws4
    $mod+Shift+5 move container to workspace $ws5
    $mod+Shift+6 move container to workspace $ws6
    $mod+Shift+7 move container to workspace $ws7
    $mod+Shift+8 move container to workspace $ws8
    $mod+Shift+9 move container to workspace $ws9
    $mod+Shift+0 move container to workspace $ws10

    $mod+r mode "resize"
    $mod+Shift+g mode "$mode_gaps"
}

mode "resize" {
        bindsym {
            h resize shrink width 5 px or 5 ppt
            j resize grow height 5 px or 5 ppt
            k resize shrink height 5 px or 5 ppt
            l resize grow width 5 px or 5 ppt

            Escape mode "default"
        }
}

mode "$mode_gaps" {
        bindsym {
            o      mode "$mode_gaps_outer"
            i      mode "$mode_gaps_inner"

            Escape mode "default"
        }
}

mode "$mode_gaps_inner" {
        bindsym {
            plus  gaps inner current plus 2
            minus gaps inner current minus 2
            0     gaps inner current set 0
            d mode "default", gaps inner current set $default_gaps_inner

            Shift+plus  gaps inner all plus 2
            Shift+minus gaps inner all minus 2
            Shift+0     gaps inner all set 0
            Shift+d mode "default", gaps inner all set $default_gaps_inner

            Escape mode "default"
        }
}
mode "$mode_gaps_outer" {
        bindsym {
            plus  gaps outer current plus 2
            minus gaps outer current minus 2
            0     gaps outer current set 0
            d mode "default", gaps outer current set $default_gaps_outer

            Shift+plus  gaps outer all plus 2
            Shift+minus gaps outer all minus 2
            Shift+0     gaps outer all set 0
            Shift+d mode "default", gaps outer all set $default_gaps_outer

            Escape mode "default"
        }
}

# window colors
#                       border              background         text                 indicator   child_border
client.focused          $bg-color           $bg-color          $text-color          #00ff00     #900000
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00     $inactive-bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00     $inactive-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00     $urgent-bg-color

bar {
    status_command i3status
    position top
    strip_workspace_numbers yes
    colors {
        background          $bg-color
        statusline          #c5c8c6
        separator           #00ff00
        #                   border              background          text
        focused_workspace   $bg-color           $bg-color           $text-color
        inactive_workspace  $inactive-bg-color  $inactive-bg-color  $inactive-text-color
        urgent_workspace    $urgent-bg-color    $urgent-bg-color    $text-color
    }
}

