bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+r mode "resize"
bindsym $mod+Shift+g mode "$mode_gaps"

mode "resize" {
           bindsym h resize shrink width 5 px or 5 ppt
           bindsym j resize grow height 5 px or 5 ppt
           bindsym k resize shrink height 5 px or 5 ppt
           bindsym l resize grow width 5 px or 5 ppt

           bindsym Escape mode "default"
}

mode "$mode_gaps" {
          bindsym o      mode "$mode_gaps_outer"
          bindsym i      mode "$mode_gaps_inner"

          bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
          bindsym plus  gaps inner current plus 2
          bindsym minus gaps inner current minus 2
          bindsym 0     gaps inner current set 0
          bindsym d     mode "default", gaps inner current set $default_gaps_inner

          bindsym Shift+plus  gaps inner all plus 2
          bindsym Shift+minus gaps inner all minus 2
          bindsym Shift+0     gaps inner all set 0
          bindsym Shift+d mode "default", gaps inner all set $default_gaps_inner

          bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
          bindsym plus  gaps outer current plus 2
          bindsym minus gaps outer current minus 2
          bindsym 0     gaps outer current set 0
          bindsym d     mode "default", gaps outer current set $default_gaps_outer

          bindsym Shift+plus  gaps outer all plus 2
          bindsym Shift+minus gaps outer all minus 2
          bindsym Shift+0     gaps outer all set 0
          bindsym Shift+d mode "default", gaps outer all set $default_gaps_outer

          bindsym Escape mode "default"
}

# window colors
#                       border              background         text                 indicator   child_border
client.focused          $bg-color           $bg-color          $text-color          #00ff00     #8E88B7
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00     $inactive-bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00     $inactive-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00     $urgent-bg-color

bar {
    status_command /usr/bin/i3status
    position top
    strip_workspace_numbers yes
    colors {
        background          $bg-color
        statusline          #c5c8c6
        separator           #00ff00
        #                   border              background          text
        focused_workspace   $bg-color           $bg-color           $text-color
        inactive_workspace  $inactive-bg-color  $inactive-bg-color  $inactive-text-color
        urgent_workspace    $urgent-bg-color    $urgent-bg-color    $text-color
    }
}

