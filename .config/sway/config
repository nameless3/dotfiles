set $mod Mod4
set $term termite

font pango:xos4 Terminus 8

floating_modifier $mod

set $default_gaps_inner 8
set $default_gaps_outer 3
gaps inner $default_gaps_inner
gaps outer $default_gaps_outer

bindsym $mod+Return exec $term -e /usr/bin/zsh

bindsym $mod+q kill

bindsym $mod+d exec --no-startup-id "rofi -show drun -width 100 -location 1 -lines 6 -columns 10 -bw 2 -yoffset -2 -font 'xos4 Terminus 8' -theme /usr/share/rofi/themes/gruvbox-dark.rasi"
bindsym $mod+Pause exec swaylock -i ~/Pictures/Bakgrunder/bladerunner2049-1.png --scaling fill
#bindsym Print exec --no-startup-id import -window root ~/Pictures/$(date '+%Y%m%d-%H%M%S').png
bindsym Print exec grim ~/Pictures/$(date +"%Y-%m-%d_%H:%M:%S").png
bindsym --release Shift+Print exec --no-startup-id import ~/Pictures/$(date "+%Y%m%d-%H%M%S").png
#bindsym Shift+Print exec --no-startup-id gnome-screenshot -i
output * bg ~/Pictures/Bakgrunder/bladerunner2049-1.png fill

