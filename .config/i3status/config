# i3status configuration file.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 2
}

order += "disk /"
order += "disk /home"
order += "memory"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "cpu_temperature 1"
order += "cpu_temperature 2"
order += "cpu_temperature 3"
order += "read_file temp1_input"
order += "tztime local"
order += "volume master"

disk "/" {
    format = " %used"
}

disk "/home" {
    format = " %used"
}

memory {
    format = " %used"
    threshold_degraded = "10%"
    format_degraded = "··< %available"
    separator_block_width = "30"
}

cpu_usage {
    format = " %cpu0 %cpu1 %cpu2 %cpu3 %cpu4 %cpu5 %cpu6 %cpu7"
    degraded_threshold = "25"
    separator_block_width = "30"
}

cpu_temperature 0 {
    format = " CPU: %degrees°"
    max_threshold = "75"
    path = /sys/devices/platform/asus-wmi-sensors/hwmon/hwmon0/temp1_input
#    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp2_input"
#    path = "/sys/class/hwmon/hwmon*/temp2_input"
#    sensors | awk '/Tdie/{ print $2 }' | tr -d +
}

cpu_temperature 1 {
    format = "Socket: %degrees°"
    max_threshold = "75"
    path = /sys/devices/platform/asus-wmi-sensors/hwmon/hwmon0/temp2_input
#    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp3_input"
#    path = "/sys/class/hwmon/hwmon*/temp3_input"
}

cpu_temperature 2 {
    format = "Mobo: %degrees°"
    max_threshold = "75"
    path = /sys/devices/platform/asus-wmi-sensors/hwmon/hwmon0/temp3_input
#    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp4_input"
#    path = "/sys/class/hwmon/hwmon*/temp4_input"
}

cpu_temperature 3 {
    format = "Chip: %degrees°"
    max_threshold = "75"
    separator_block_width = "30"
    path = /sys/devices/platform/asus-wmi-sensors/hwmon/hwmon0/temp4_input
#    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp5_input"
#    path = "/sys/class/hwmon/hwmon*/temp5_input"
}

read_file temp1_input {
    format = "GPU: %content°"
    path = "/sys/class/drm/card0/device//hwmon//hwmon3/temp1_input"
    Max_characters = "2"
    separator_block_width = "30"
}

tztime local {
    format = " %a, %e %b  %R"
    separator_block_width = "30"
}

volume master {
    format = " %volume  "
    format_muted = " %volume  "
    device = "pulse"
}
