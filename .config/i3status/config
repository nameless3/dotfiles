# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 2
}

order += "disk /"
order += "disk /home"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "volume master"
order += "tztime local"

tztime local {
        format = "%a, %e %b   %R"
}

cpu_usage {
        format = " %usage"
	degraded_threshold = "30"
}

cpu_temperature 0 {
	format = "%degrees°"
	max_threshold = "75"
}

disk "/" {
        format = " %used"
}

disk "/home" {
        format = " %used"
}

volume master {
	format = " %volume"
	format_muted = " (%volume)"
	device = "pulse"
}

